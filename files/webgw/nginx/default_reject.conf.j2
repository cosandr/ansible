server {
    listen      80 default_server;
    listen      [::]:80 default_server;
    server_name _;
    return      444;
}

{% if nginx_default_reject_ssl | default(true) %}
server {
    listen               443 ssl http2 default_server;
    listen               [::]:443 ssl http2 default_server;
    server_name          _;
    ssl_reject_handshake on;
}
{% endif %}
