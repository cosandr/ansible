---
apiVersion: source.toolkit.fluxcd.io/v1
kind: GitRepository
metadata:
  name: flux-system
  namespace: flux-system
spec:
  interval: 15m
  url: "ssh://git@gitlab.{{ domains['dv'] }}/flux/infra"
  ref:
    branch: master
  secretRef:
    name: gitlab-ssh-credentials
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: flux-system
  namespace: flux-system
spec:
  interval: 15m
  retryInterval: 5m
  path: ./flux
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
